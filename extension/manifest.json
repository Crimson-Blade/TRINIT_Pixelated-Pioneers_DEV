{
    "manifest_version": 3,
    "name": "Emission Counter",
    "description": "Show total carbon emissions per website visited",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_title": "Hello",
        "default_icon": "images/carbon.svg"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": ["storage"],
    "devtools_page": "devtools.html"
}
