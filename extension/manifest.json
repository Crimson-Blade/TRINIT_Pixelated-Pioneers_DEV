{
    "manifest_version": 3,
    "name": "Emission Counter",
    "description": "Show total carbon emissions per website visited",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Hello",
        "default_icon": "images/carbon.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": ["storage"]
}
